<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="stooges.three.finalproject.RestaurantDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/SearchBar"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/SearchText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Search for Restaurant"
            android:layout_weight="3"
            style="@android:style/TextAppearance.Large"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SEARCH"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TagLine"
        android:layout_below="@+id/SearchBar">
        <TextView
            android:id="@+id/RestaurantName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/RestaurantName"
            style="@android:style/TextAppearance.Large"/>
        <ImageButton
            android:id="@+id/FavoriteButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_heart_unfilled"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TagLine"
        android:orientation="vertical">
        <RatingBar
            android:id="@+id/RestaurantRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="0.5"
            android:rating="3.5"
            android:isIndicator="true" />
        <ImageView
            android:id="@+id/RestaurantImage"
            android:layout_width="match_parent"
            android:layout_height="450px"
            android:background="@color/cpb_red"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:background="@color/cpb_blue"
            android:text="@string/lorem"
            android:lineSpacingMultiplier="1.5"
            android:padding="@dimen/activity_horizontal_margin"/>
    </LinearLayout>



    <!-- This is where the Map goes-->

</RelativeLayout>
